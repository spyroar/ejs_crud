<%- include('./base/header.ejs') %>
<div class="container">
  <div class="alert bg-success mt-3">
    <h4 class="text-center">Update your records</h4>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <form action="/update/<%= records._id %>" method="POST">
        <div class="filed my-3">
          <label for="" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            value="<%= records.name %>"
            placeholder="enter your name"
          />
        </div>
        <div class="filed my-3">
          <label for="" class="form-label">City</label>
          <input
            type="text"
            class="form-control"
            name="city"
            value="<%= records.city %>"
            placeholder="enter your city"
          />
        </div>
        <div class="filed my-3">
          <label for="" class="form-label">email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            value="<%= records.email %>"
            placeholder="enter your email"
          />
        </div>
        <div class="filed my-3">
          <label for="" class="form-label">Contact</label>
          <input
            type="number"
            class="form-control"
            value="<%= records.phone_Number %>"
            name="phone_Number"
            placeholder="enter your phone number"
          />
        </div>
        <input type="submit" value="Update" class="btn btn-warning w-100" />
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>

<%- include('./base/footer.ejs') %>
